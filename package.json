{
  "name": "social-helper",
  "version": "1.0.0",
  "description": "Social Helper is a tool that automates your social media profiles",
  "main": "index.js",
  "scripts": {
    "start": "docker-compose up -d --force-recreate --build",
    "stop": "docker stop $(docker ps -a -q) && docker rm $(docker ps -a -q)",
    "backup": "docker exec db sh -c 'exec mysqldump --all-databases -uroot -p\"$MYSQL_ROOT_PASSWORD\"' > `echo $PWD`/data-dump.sql",
    "remove-volume": "docker volume rm charliejacksonwebsite_db_data",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cajacko/social-helper.git"
  },
  "author": "Charlie Jackson",
  "license": "MIT",
